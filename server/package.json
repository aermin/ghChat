{
  "name": "ghChat",
  "version": "1.0.0",
  "description": "server of ghChat",
  "author": "aermin <aermin@qq.com>",
  "private": true,
  "scripts": {
    "clean": "rimraf package-lock.json node_modules",
    "cleanAndUpdate": "npm run clean && ncu -a && ncu -d -a && npm install",
    "start": "npm run build && npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Node,TypeScript\" -c \"green.bold,cyan.bold,green.bold\" \"npm run runWithNodemon\" \"npm run watch-build\"",
    "runWithNodemon": "nodemon --delay 80ms node --inspect=0.0.0.0:9229 ./dist/index.js",
    "clean-dist": "rimraf dist",
    "build": "npm run clean-dist && webpack --config webpack.config.js --progress --colors",
    "watch-build": "webpack --config webpack.config.js --progress --colors -w",
    "init_sql": "ts-node-dev --respawn --transpileOnly ./init/index.ts ",
    "build:prod": "npm run clean-dist && webpack --config webpack.config.js --progress --colors --prod",
    "start:prod": "pm2 start ./dist/index.js --env production",
    "stop:prod": "pm2 stop ./dist/index.js --env production"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "async": "0.2.9",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.1.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.3",
    "md5": "^2.2.1",
    "mysql": "2.x",
    "qiniu": "^7.2.1",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "socket.io": "^2.0.3",
    "typescript": "^3.4.3",
    "uuid": "^3.2.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-cors": "0.0.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static": "^4.0.1",
    "@types/md5": "^2.1.33",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.14.18",
    "@types/qiniu": "^7.0.1",
    "@types/request-promise": "^4.1.42",
    "@types/socket.io": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "dotenv": "^7.0.0",
    "nodemon": "^1.19.0",
    "ts-loader": "^5.3.3",
    "ts-node-dev": "^1.0.0-pre.43",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-node-externals": "^1.7.2",
    "rimraf": "^2.5.4"
  }
}
